{
    "$schema": "https://schemas.metabox.io/field-group.json",
    "id": "contact",
    "title": "Contact Information",
    "geo": true,
    "fields": [
        {
            "id": "name",
            "type": "text",
            "name": "Name"
        },
        {
            "id": "gender",
            "name": "Gender",
            "type": "radio",
            "options": {
                "male": "Male",
                "female": "Female"
            }
        },
        {
            "id": "email",
            "type": "text",
            "name": "Email"
        },
        {
            "id": "phone",
            "type": "text",
            "name": "Phone",
            "attributes": {
                "type": "tel"
            },
            "visible": [
                "gender",
                "female"
            ]
        }
    ]
}