{
    "$schema": "file:///home/tan/Sites/schema/schema.json",
    "id": "contact",
    "title": "Contact Information",
    "geo": true,
    "fields": {
        "name": {
            "id": "name",
            "type": "text",
            "name": "Name"
        },
        "gender": {
            "id": "gender",
            "name": "Gender",
            "type": "radio",
            "options": {
                "male": "Male",
                "female": "Female"
            }
        },
        "email": {
            "id": "email",
            "type": "text",
            "name": "Email"
        },
        "phone": {
            "id": "phone",
            "type": "text",
            "name": "Phone",
            "attributes": {
                "type": "tel"
            },
            "visible": ["gender", "female"]
        }
    }
}